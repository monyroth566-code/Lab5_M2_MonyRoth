<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Expense Tracker Theme -->
    <style name="Theme.ExpenseTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Green) -->
        <item name="colorPrimary">@color/expense_primary</item>
        <item name="colorPrimaryVariant">@color/expense_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/expense_light</item>
        <item name="colorSecondaryVariant">@color/expense_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/mint_white</item>
    </style>
</resources>